config rule
	option src mesh
	option dest_port 698
	option proto tcp
	option target		ACCEPT

# 
config rule
	option src mesh
	option dest_port 1978
	option proto tcp
	option target	ACCEPT

config rule
	option src mesh
	option dest_port 22
	option proto tcp
	option target	ACCEPT

config rule
	option src mesh
	option dest_port 23
	option proto tcp
	option target	ACCEPT

config redirect
    option name Picophone
    option src mesh
    option proto udp
    option src_dport 11676
    option dest_ip 172.16.1.2

config redirect
    option name Mumble
    option src mesh
    option proto tcpudp
    option src_dport 64738
    option dest_ip 172.16.1.2

config redirect
    option name Team-Talk
    option src mesh
    option proto tcpudp
    option src_dport 10333
    option dest_ip 172.16.1.2

